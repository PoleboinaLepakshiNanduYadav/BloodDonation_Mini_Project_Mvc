
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
@model  BloodDonation_Mini_Project_Mvc.Models.BloodData
<div>
    @using (Html.BeginForm())
    {
        <p>@Html.ActionLink("Back To Welcome", "Welcome")</p>
        <table align="center" border="1" color="red">
            <tr>
                <th>Id</th>
                <td>@Html.TextBoxFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Html.TextBoxFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>BloodBankName</th>
                <td>@Html.TextBoxFor(model => model.BloodBankName)</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>@Html.TextBoxFor(model => model.Address)</td>
            </tr>
            <tr>
                <th>ContactNumber</th>
                <td>@Html.TextBoxFor(model => model.ContactNumber)</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>@Html.TextBoxFor(model => model.Password)</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Html.TextBoxFor(model => model.City)</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@Html.TextBoxFor(model => model.Age)</td>
            </tr>
            <tr>
                <th>BloodGroup</th>
                <td>@Html.TextBoxFor(model => model.BloodGroup)</td>
            </tr>
            <tr>
                <th>@ViewBag.Message</th>
                <td><input type="submit" name="B1" value="Create" /></td>
            </tr>
        </table>
    }
</div>

